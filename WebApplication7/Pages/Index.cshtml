@page
@model WebApplication7.Pages.ListingPageModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Listing Page</title>

    <environment include="Development">
        <link rel="stylesheet" href="http://localhost:5000/lib/bootstrap/dist/css/bootstrap.css" />
        <script src="http://localhost:5000/js/plp.js"></script>
        <link rel="stylesheet" href="http://localhost:5000/css/site.css" />
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </environment>

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-4">
                @await Html.PartialAsync("Sections/CategoriesSection", Model.Categories)
                @await Html.PartialAsync("Sections/FiltersSection", Model.Filters)
            </div>

            <div class="col-8">
                @await Html.PartialAsync("Sections/HeaderSection", Model)
                @await Html.PartialAsync("Sections/ProductsSection", Model.Products)
                <div>
                    <button class="btn btn-primary" type="button" plp-type="load-more">Load More</button>
                </div>
            </div>
        </div>
    </div>
    <script id="plp-state" type="text/plp">
        @Html.Raw(Model.State.ToJson())
    </script>
</body>
</html>
