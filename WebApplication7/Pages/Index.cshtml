@page
@model WebApplication7.Pages.ListingPageModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Listing Page</title>

    <environment include="Development">
        <link rel="stylesheet" href="http://localhost:5000/lib/bootstrap/dist/css/bootstrap.css" />
        <script src="http://localhost:5000/js/plp.js"></script>
        <link rel="stylesheet" href="http://localhost:5000/css/site.css" />
    </environment>    
    
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-4">
            @await Html.PartialAsync("Sections/CategoriesSection", Model.Categories)
            @await Html.PartialAsync("Sections/FiltersSection", Model.Filters)
        </div>

        <div class="col-8">
            @await Html.PartialAsync("Sections/HeaderSection", Model)
            @await Html.PartialAsync("Sections/ProductsSection", Model.Products)
        </div>
    </div>
</div>
<script id="plp-state" type="text/plp">
    @Html.Raw(Model.State.ToJson())
</script>
</body>
</html>
