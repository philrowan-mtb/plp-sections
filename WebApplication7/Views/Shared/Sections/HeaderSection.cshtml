@model ListingPageModel
<div class="row">
    <div class="todo">Breadcrumbs</div>
</div>
<div class="row">
    <div class="col-8">
        <h4><span class="todo">@Model.ActiveCategory</span> <small class="text-muted">(@Model.TotalProductsCount)</small></h4>
        <ul class="nav nav-pills" id="plp-active-filters">
            @if (Model.ActiveFilters != null && Model.ActiveFilters.Any())
            {
                @foreach (var filter in Model.ActiveFilters)
                {
                    <li class="nav-item" plp-id="@filter.Id">
                        <a class="nav-link" href="#" plp-type="filter" plp-model="@Html.Encode(filter.ClientModel.ToJson())">X | @filter.Value</a>
                    </li>
                }
            }
        </ul>
    </div>
    <div class="col-4">
        <select plp-type="sort" class="form-control todo">
            @foreach (var o in Model.AvailableSort)
            {
                <option plp-sort-property="@o.PropertyName" plp-sort-dir="@o.Direction" value="@o.Title">@o.Title</option>
            }
        </select>
    </div>
</div>