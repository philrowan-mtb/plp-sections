@model ProductCard

<div class="col-4 product">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <span color="#ff2355">@Model.Price.ToString("C")</span>            
            @foreach (var f in Model.Facets)
            {
                <p>@f.Name : @f.Value</p>
            }
        </div>
    </div>
</div>