@model IEnumerable<FilterOption>

    <ul class="nav nav-pills" id="plp-active-filters">
        @if (Model != null && Model.Any())
        {
            @foreach (var filter in Model)
            {
                <li class="nav-item" plp-id="@filter.Id">
                    <a class="nav-link active" href="#" plp-type="filter" plp-model="@Html.Encode(filter.ClientModel.ToJson())">X | @filter.Value</a>
                </li>
            }
        }
    </ul>